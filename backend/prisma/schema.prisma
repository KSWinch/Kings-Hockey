generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  email String @unique
  id    Int    @id @default(autoincrement())
  name  String
}

model Games {
  away_score String
  away_team  String
  date       String @unique
  goals      Goal[]   
  home_score String
  home_team  String
  id         Int    @id @default(autoincrement()) @unique
  location   String
  penalties  Penalty[] 
  time       String
  rink       String
}

model Goal {
  assister_1   String @default("")
  assister_2   String @default("")
  game         Games  @relation(fields: [game_id], references: [id])
  game_id      Int  
  id           String    @id 
  period       String    
  scorer       String 
  team         String 
  time         String 
  total        String
}

model Penalty {
  game         Games  @relation(fields: [game_id], references: [id])
  game_id      Int
  id           String    @id 
  infraction   String 
  length       String    
  period       String    
  player       String 
  team         String
  time         String 
}

model Stats {
  assists            Int
  game_winning_goals Int
  games_played       Int
  goals              Int
  jersey_number      Int    @id @unique
  name               String
  penalty_minutes    Int
  points             Int
  points_per_game    Int
  position           String
  power_play_goals   Int
  short_handed_goals Int
}

model Standings {
  id                Int    @id @default(autoincrement())
  rank              Int
  team              String @unique
  games_played      Int
  wins              Int
  losses            Int
  ties              Int
  overtime_losses   Int
  points            Int
  regulation_wins   Int
  goals_for         Int
  goals_against     Int
  goal_differential String
  penalty_minutes   Int
  last_10_games     String
  streak            String
}
